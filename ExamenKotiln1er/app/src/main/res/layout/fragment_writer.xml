<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentWriter">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/img_view_writer"
            android:layout_width="138dp"
            android:layout_height="129dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/imgwriter1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_nickname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/img_view_writer"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_user_type"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="65dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/img_view_writer"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_writer_articles"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="105dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/img_view_writer"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/button_add"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            android:text="Button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_view_writer" />

        <Button
            android:id="@+id/button_update"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toEndOf="@+id/button_add"
            app:layout_constraintTop_toBottomOf="@+id/img_view_writer" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_add" />



        <ImageView
            android:id="@+id/img_work"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/article1"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/btn_arrow_right"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toEndOf="@+id/btn_arrow_left"
            app:layout_constraintTop_toBottomOf="@+id/button_delete" />

        <ImageView
            android:id="@+id/btn_arrow_left"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="32dp"

            android:src="@drawable/arrowleft"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_delete" />

        <ImageView
            android:id="@+id/btn_arrow_right"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/arrowright"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_delete" />

        <TextView
            android:id="@+id/literary_work_title"
            android:layout_width="250dp"
            android:layout_height="32dp"
            android:layout_marginTop="30dp"
            android:text="TextView"
            android:textSize="20dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_work" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>